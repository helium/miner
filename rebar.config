                                                                {peer, "extensions/peer"},
                                                                {ledger, "extensions/ledger"},
                                                                {info, "extensions/info"},
                                                                {trace, "extensions/trace"},
                                                                {txn, "extensions/txn"},
                                                                {dkg, "extensions/dkg"},
                                                                {authorize, "extensions/authorize"}
                                                               ]},
                            {include_erts, false}]}]
            },
            {test,
             [
              {erl_opts, [nowarn_export_all]},
              {deps, [{meck, "0.8.12"}]}
             ]}
]}.

{ct_opts,
 [{sys_config, "config/dev.config"}]}.
